@model IEnumerable<BibliotekaProjekt.Models.Zasob>

@{
    ViewData["Title"] = "Biblioteka Multimediów";
}

<div class="text-center">
    <h1 class="display-4">Moja Biblioteka</h1>
    <p>Projekt zaliczeniowy z Programowania Obiektowego</p>
</div> 
<form asp-action="Index" method="get" class="mb-3 d-flex gap-2">
    <input type="text" name="fraza" class="form-control" placeholder="Szukaj po tytule lub autorze..." style="max-width: 300px;">
    <button type="submit" class="btn btn-primary">Szukaj</button>
    <a asp-action="Index" class="btn btn-secondary">Wyczyść</a>
</form>
<p>
    <a asp-action="DodajKsiazke" class="btn btn-success"> + Dodaj Nową Książkę</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Typ</th>
            <th>Tytuł</th>
            <th>Rok</th>
            <th>Szczegóły (Specyficzne dla klasy)</th>
            <th>Przykładowa Kara (za 10 dni)</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    @if (item is BibliotekaProjekt.Models.Ksiazka)
                    {
                        <span class="badge bg-primary">Książka</span>
                    }
                    else if (item is BibliotekaProjekt.Models.Film)
                    {
                        <span class="badge bg-success">Film</span>
                    }
                </td>
                <td>@item.Tytul</td>
                <td>@item.RokWydania</td>
                <td>
                    @if (item is BibliotekaProjekt.Models.Ksiazka k)
                    {
                        <span>Autor: @k.Autor (@k.LiczbaStron str.)</span>
                    }
                    else if (item is BibliotekaProjekt.Models.Film f)
                    {
                        <span>Reżyser: @f.Rezyser (@f.CzasTrwaniaMinuty min)</span>
                    }
                </td>
                <td style="color: red; font-weight: bold;">
                    @item.ObliczKare(10).ToString("C")
                </td>
                <td>
                    <a asp-action="Usun" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Na pewno usunąć?');">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>