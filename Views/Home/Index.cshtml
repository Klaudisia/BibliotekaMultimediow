@model IEnumerable<BibliotekaProjekt.Models.Zasob>

@{
    ViewData["Title"] = "Biblioteka Multimediów";
}
<style>
    .dark-mode-input {
        background-color: #333 !important; 
        color: white !important;           
        border: 1px solid #6c757d;         
    }
    
    .dark-mode-input::placeholder {
        color: #bbb !important;           
        opacity: 1;
    }
    
    .dark-mode-input:focus {
        background-color: #444 !important;
        color: white !important;
        border-color: #9033af;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
</style>


<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex gap-2">
            <input type="text" name="fraza" class="form-control dark-mode-input" placeholder="Szukaj po tytule, autorze..." />
            <button type="submit" class="btn btn-light">
                <i class="bi bi-search"></i>
            </button>
            <a asp-action="Index" class="btn btn-outline-light">Wyczyść</a>
        </form>
    </div>
    <div class="col-md-6 text-md-end mt-3 mt-md-0">
        <div class="dropdown">
            <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-plus-circle"></i> Dodaj Zasób
            </button>
            <ul class="dropdown-menu dropdown-menu-dark shadow"> <li><a class="dropdown-item" asp-action="DodajKsiazke">📚 Dodaj Książkę</a></li>
                <li><a class="dropdown-item" asp-action="DodajEbook">📱 Dodaj E-booka</a></li>
                <li><a class="dropdown-item" asp-action="DodajFilm">🎬 Dodaj Film</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow bg-dark text-white border-secondary">
                
                <div class="card-header d-flex justify-content-between align-items-center border-secondary">
                    <small class="text-secondary">ID: #@item.Id</small>
                    @if (item is BibliotekaProjekt.Models.Ksiazka)
                    {
                        <span class="badge bg-light text-dark border border-light">Książka</span>
                    }
                    else if (item is BibliotekaProjekt.Models.Film)
                    {
                        <span class="badge bg-light text-dark border border-light">Film</span>
                    }
                    else if (item is BibliotekaProjekt.Models.Ebook)
                    {
                        <span class="badge bg-light text-dark border border-light">E-book</span>
                    }
                </div>

                <div class="card-body">
                    <h5 class="card-title fw-bold text-light">@item.Tytul</h5>
                    <h6 class="card-subtitle mb-3 text-secondary">Rok: @item.RokWydania</h6>
                    
                    <div class="card-text p-2 rounded border border-secondary" style="background-color: rgba(255,255,255,0.05);">
                        @if (item is BibliotekaProjekt.Models.Ksiazka k)
                        {
                            <span><i class="bi bi-person"></i> Autor: <strong class="text-light">@k.Autor</strong></span><br/>
                            <span class="text-secondary"><i class="bi bi-book"></i> Stron: @k.LiczbaStron</span>
                        }
                        else if (item is BibliotekaProjekt.Models.Film f)
                        {
                            <span><i class="bi bi-camera-reels"></i> Reżyser: <strong class="text-light">@f.Rezyser</strong></span><br/>
                            <span class="text-secondary"><i class="bi bi-clock"></i> Czas: @f.CzasTrwaniaMinuty min</span>
                        }
                        else if (item is BibliotekaProjekt.Models.Ebook e)
                        {
                            <span><i class="bi bi-person"></i> Autor: <strong class="text-light">@e.Autor</strong></span><br/>
                            <span class="text-secondary"><i class="bi bi-phone"></i> Stron: @e.LiczbaStron</span>
                        }
                    </div>
                </div>

                <div class="card-footer bg-transparent border-secondary">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-secondary" style="font-size: 0.9rem;">Kara (10 dni):</span>
                        <span class="fw-bold text-danger">@item.ObliczKare(10).ToString("C")</span>
                    </div>

                    <div class="d-grid gap-2 d-flex justify-content-end">
                        @if (item is BibliotekaProjekt.Models.Ksiazka)
                        {
                            <a asp-action="EdytujKsiazke" asp-route-id="@item.Id" class="btn btn-outline-light btn-sm">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                        }
                        else if (item is BibliotekaProjekt.Models.Ebook)
                        {
                            <a asp-action="EdytujEbook" asp-route-id="@item.Id" class="btn btn-outline-light btn-sm">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                        }
                        else if (item is BibliotekaProjekt.Models.Film)
                        {
                            <a asp-action="EdytujFilm" asp-route-id="@item.Id" class="btn btn-outline-light btn-sm">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                        }

                        <a asp-action="Usun" asp-route-id="@item.Id" class="btn btn-outline-light btn-sm" onclick="return confirm('Na pewno usunąć?');">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>