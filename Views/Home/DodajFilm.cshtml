@model BibliotekaProjekt.Models.Film

<h2>Dodaj nowy Film</h2>

<form asp-action="DodajFilm" method="post" style="max-width: 400px;">
    <div class="mb-3">
        <label>Tytuł</label>
        <input asp-for="Tytul" class="form-control" required />
    </div>
    
    <div class="mb-3">
        <label>Reżyser</label>
        <input asp-for="Rezyser" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Rok wydania</label>
        <input asp-for="RokWydania" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Czas trwania w minutach</label>
        <input asp-for="CzasTrwaniaMinuty" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Zapisz Film</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>