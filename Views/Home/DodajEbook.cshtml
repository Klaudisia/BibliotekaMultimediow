@model BibliotekaProjekt.Models.Ebook

<h2>Dodaj nowego E-booka</h2>

<form asp-action="DodajEbook" method="post" style="max-width: 400px;">
    <div class="mb-3">
        <label>Tytu≈Ç</label>
        <input asp-for="Tytul" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Autor</label>
        <input asp-for="Autor" class="form-control" required />
    </div>
    
    <div class="mb-3">
        <label>Rok wydania</label>
        <input asp-for="RokWydania" type="number" class="form-control" />
    </div>


    <div class="mb-3">
        <label>Liczba Stron</label>
        <input asp-for="LiczbaStron" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-info">Zapisz E-booka</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>